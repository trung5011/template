		include ../_include/_css
		block css
		include ../_include/_script
		block js
		script.
			jQuery(document).ready(function($) {
			// heder mobile scroll
			var screen_width = $(window).width();
			if (screen_width <= 768) {
			var fixHeader = $('#js-header-tools-mobile').offset().top;
			$(window).scroll(function() {
			var currentScroll = $(window).scrollTop();
			if (currentScroll > fixHeader) {
			$('#js-header-tools-mobile').css('background-color', '#0C2F40');
			} else {
			$('#js-header-tools-mobile').css('background-color', 'transparent');
			}
			});
			}
			/*popup share social*/
			$('.fb-share, .gg-share').click(function(event) {
			event.preventDefault();
			var thisLink = $(this).find('a').attr('href');
			window.open(thisLink, 'fbShareWindow', 'height=450, width=550, top=' + ($(window).height() / 2 - 275) + ', left=' + ($(window).width() / 2 - 225) + ', toolbar=0, location=0, menubar=0, directories=0, scrollbars=0');
			return false;
			});
			// js popup header-pc
			if (screen_width > 768) {
			$("#js-menu-hamburger-nav").click(function() {
			$('#js-menu-pc-wrap').stop().toggleClass('is--active');
			});
			$("#js-menu-pc-wrap ._close").click(function() {
			$('#js-menu-pc-wrap').removeClass('is--active');
			});
			}
			// show frm_search
			$('.js-focus-search').click(function() {
			$('#js-frm-search-def').addClass('is-open');
			});
			$('#js-searchbox-close').click(function() {
			$('#js-frm-search-def').removeClass('is-open');
			});
			});
